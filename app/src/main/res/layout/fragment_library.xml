<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryFragment"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#121212">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="top">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:src="@drawable/ic_artists">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="left"
                android:paddingTop="17dp"
                android:text="Your Library"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_plus">


                </ImageView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/plus"
                    android:paddingTop="17dp"
                    android:paddingRight="7dp"
                    android:src="@drawable/ic_search_small"
                    app:tint="@color/white">

                </ImageView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|top">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="13dp"
                android:text="Playlist"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textFontWeight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#808080">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="Albums"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textFontWeight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#808080">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="Artists"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textFontWeight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#808080">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="Downloaded"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textFontWeight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#808080">

            </Button>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/black"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/updown"
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="13dp"
                        android:src="@drawable/up_and_down"
                        app:tint="@color/white">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/updown"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:paddingTop="6dp"
                        android:text="Recents"
                        android:textColor="@color/white"
                        android:textSize="12dp">

                    </TextView>

                    <ImageButton
                        android:id="@+id/list"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="50dp"
                        android:paddingBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu"
                        app:tint="@color/white"
                        android:backgroundTint="@color/black">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/menu"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="14dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/list"
                        app:tint="@color/white"
                        android:backgroundTint="@color/black"
                        android:visibility="invisible">
                    </ImageButton>
                </RelativeLayout>
<!--start of list-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/liked_songs"></ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liked Songs"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist . 71 songs"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img2">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Gaming Tracks"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist . Spotify"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img3">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dance Hits"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist . Spotify"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img4">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pop Shots"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist . Spotify"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img5"></ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Summer Rewind"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist . Spotify"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img8">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinner and Chill"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist . Thang"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img13">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coffee Table Jazz"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Album . Thang"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:paddingLeft="13dp"
                        android:src="@drawable/img16">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Release Radar"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="20dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Album . Spotify"
                            android:textColor="#808080"
                            android:textSize="14dp"
                            android:paddingLeft="10dp">

                        </TextView>



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>


