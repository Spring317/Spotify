<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@color/black"
    android:id="@+id/scrollView"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    tools:context=".SongList">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/boundedLinearLayout"
                >

                    <ImageView
                        android:id="@+id/images"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:src="@drawable/intothenight"
                        android:layout_gravity="center"
                        />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_group"
                    android:paddingVertical="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/song"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/intothenight"
                            android:textColor="@color/white"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/song"
                            android:text="@string/yoasobi"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"
                        >

                        <CheckBox
                            android:id="@+id/btn_like"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:background="@drawable/heart_selector"
                            android:checked="false"

                            />

                        <ImageView
                            android:id="@+id/btn_download"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/download"
                            />

                        <ImageView
                            android:id="@+id/popupmenu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:button="@null"
                            android:src="@drawable/ic_menu_dots"
                            android:onClick="showPopup"
                            />
                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/right_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <CheckBox
                                android:id="@+id/btn_shuffle"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:button="@null"
                                android:background="@drawable/shuffle_selector"
                                android:checked="false"/>

                            <CheckBox
                                android:id="@+id/btn_play"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:button="@null"
                                android:background="@drawable/play_pause_selector"
                                android:checked="false"/>

                        </LinearLayout>
                    
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:id="@+id/song_pack"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/intothenight"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:paddingTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yoasobi"
                            android:textColor="@color/white"
                            android:textSize="10dp"

                            />

                    </LinearLayout>

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:id="@+id/song_popupmenu"
                        android:layout_marginLeft="160dp"
                        android:layout_marginVertical="10dp"
                        android:src="@drawable/ic_menu_dots"
                        android:onClick="showPopup"
                        android:layout_alignParentRight="true"

                    />
                </RelativeLayout>


            </LinearLayout>




</ScrollView>